# Minimal Test Dockerfile for Prediction Server
# Builds quickly to test functionality before full deployment
FROM python:3.11-slim

WORKDIR /app

# Install minimal dependencies
RUN pip install --no-cache-dir flask requests

# Copy only essential files for testing
COPY neuromod/ /app/neuromod/
COPY vertex_container/prediction_server.py .
COPY vertex_container/requirements.txt .

# Install requirements
RUN pip install --no-cache-dir -r requirements.txt

# Quick import test
RUN python -c "import sys; sys.path.append('/app'); from neuromod import NeuromodTool; print('âœ… Import test passed')" || exit 1

EXPOSE 8080

# Health check
HEALTHCHECK --interval=10s --timeout=10s --start-period=5s --retries=2 \
    CMD curl -f http://localhost:8080/health || exit 1

CMD ["python", "prediction_server.py"]
